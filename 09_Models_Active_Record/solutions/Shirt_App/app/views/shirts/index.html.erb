<h1>Welcome!</h1>

<%= link_to("+ Create New Shirt", new_shirt_url) %>

<%= form_tag("/", method: "get") do %>
  <%= label_tag(:query, "Search for:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<% @shirts.each do |shirt| %>
  <h1> <%= shirt.name %> </h1>
  <%= shirt.description %>

<% end %>
